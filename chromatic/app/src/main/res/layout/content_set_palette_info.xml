<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uw.wuyiz.chromatic.SetPaletteInfoActivity"
    tools:showIn="@layout/activity_set_palette_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginEnd="@dimen/margin">

            <EditText
                android:id="@+id/palette_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Palette Name"
                android:textSize="@dimen/txt_set"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/padding"
                    android:textSize="@dimen/txt_set"/>

                <ImageButton
                    android:id="@+id/btn_location"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_location"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/padding"
                    android:textSize="@dimen/txt_set"/>

                <ImageButton
                    android:id="@+id/btn_date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_time"/>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/test4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin">

        <TextView
            android:id="@+id/set_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"/>

        <TextView
            android:id="@+id/set_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"/>

        <TextView
            android:id="@+id/set_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"/>

        <TextView
            android:id="@+id/set_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"/>

        <TextView
            android:id="@+id/set_five"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>

    <EditText
        android:id="@+id/palette_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:hint="Notes"
        android:textSize="@dimen/txt_set"/>

</LinearLayout>
