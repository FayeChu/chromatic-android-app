    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GalleryScreenActivity">
        <activity android:name=".CreateMoodBoardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MoodBoardActivity"
            android:label="@string/title_activity_gallery_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MoodPreviewActivity"
            android:label="Mood Preview" />
        <activity
            android:name=".CreationsActivity"
            android:label="@string/title_activity_creations"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
